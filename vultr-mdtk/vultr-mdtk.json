{
    "variables": {
        "vultr_api_key": "{{ env `VULTR_API_KEY` }}"
    },
    "sensitive-variables": [
        "vultr_api_key"
    ],
    "builders": [
        {
            "type": "vultr",
            "api_key": "{{ user `vultr_api_key` }}",
            "snapshot_description": "vultr-mdtk-{{isotime \"2006-01-02_1504\"}}",
            "region_id": "ewr",
            "plan_id": "vc2-1c-1gb",
            "os_id": "387",
            "ssh_username": "root",
            "state_timeout": "15m"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "vultr-mdtk/scripts/provision.sh",
            "destination": "/tmp/provision.sh"
        },
        {
            "type": "shell",
            "script": "vultr-mdtk/scripts/install-cloud-init.sh"
        },
        {
            "type": "shell",
            "script": "vultr-mdtk/scripts/install-mdtk.sh"
        }
    ]
}