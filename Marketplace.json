{
    "variables": {
        "vultr_api_key": "{{ env `VULTR_API_KEY` }}"
    },
    "sensitive-variables": [
        "vultr_api_key"
    ],
    "builders": [
        {
            "type": "vultr",
            "api_key": "{{ user `vultr_api_key` }}",
            "snapshot_description": "Marketplace-Test-{{isotime \"2006-01-02_1504\"}}",
            "region_id": "ewr",
            "plan_id": "vc2-1c-1gb",
            "os_id": "387",
            "ssh_username": "root",
            "state_timeout": "15m"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "#!/bin/bash",
                "sleep 60",
                "cd /tmp",
                "wget https://ewr1.vultrobjects.com/cloud_init_beta/cloud-init_ubuntu_latest.deb",
                "md5sum cloud-init_ubuntu_latest.deb",
                "apt-get -y install python3-jinja2",
                "apt-get -y install python3-jsonpatch",
                "apt-get -y install python3-jsonschema",
                "dpkg -i cloud-init_ubuntu_latest.deb",
                "apt-get install -f -y"
            ]
        }
    ]
}